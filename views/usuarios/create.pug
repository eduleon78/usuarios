extends ../layout

block content 
  br
  br

  h1  Nuevo Usuario 

  form(action="/usuarios/create" method='post')
    .form-group 
      label(for="nombre") Nombre 
      input#nombre.form-control(type="text" name="nombre" value=usuario.nombre class=errors.nombre ? 'is-invalid' : '')
      if errors.nombre
        small#nombreHelp.text-danger 
          = errors.nombre.message
    .form-group 
      label(for="email") Email 
      input#email.form-control(type="text" name="email" value=usuario.email class=errors.email ? 'is-invalid' : '')
      if errors.email
        small#nombreHelp.text-danger 
          = errors.email.message
    .form-group 
      label(for="pwd") Password 
      input#password.form-control(type="text" name="password" class=errors.password ? 'is-invalid' : '')
      if errors.password
        small#passwordHelp.text-danger 
          = errors.password.message
    .form-group 
      label(for="confirm_pwd") Confirmar Password  
      input#confirm_pwd.form-control(type="text" name="confirm_pwd" class=errors.confirm_password ? 'is-invalid' : '')
      if errors.confirm_pwd
        small#confirm_pwdHelp.text-danger 
          = errors.confirm_pwd.message
    br
    br
    input.btn.btn-primary(type="submit" value='ok')
